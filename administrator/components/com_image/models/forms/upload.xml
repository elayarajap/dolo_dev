<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_IMAGE_FORM_LBL_UPLOAD_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_IMAGE_FORM_LBL_UPLOAD_CREATED_BY"
            description="COM_IMAGE_FORM_DESC_UPLOAD_CREATED_BY"  /> 

       <field name="image" type="media"
                
            label="COM_IMAGE_FORM_LBL_UPLOAD_IMAGE"
            description="COM_IMAGE_FORM_DESC_UPLOAD_IMAGE" 
                
                
                 required="true" 
            directory="/images" /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field>

	</fieldset>

</form>
